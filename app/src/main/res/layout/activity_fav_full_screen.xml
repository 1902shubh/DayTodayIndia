<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fav_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/fav_rgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <RadioButton
                android:id="@+id/fav_darkmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Mode" />

            <RadioButton
                android:id="@+id/fav_lightmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Light Mode"
                android:textColor="#c1c1c1" />
        </RadioGroup>

        <TextView
            android:id="@+id/fav_tv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:fontFamily="serif"
            android:text="India will won the world cup"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.5">

            <LinearLayout
                android:id="@+id/favfullscreenimage"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/fav_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                app:cardBackgroundColor="@color/silver"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/btn_fav_gmail"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/gmail" />

                    <ImageView
                        android:id="@+id/btn_fav_whatsapp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/whatsapp" />

                    <ImageView
                        android:id="@+id/btn_fav_share"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/share" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:id="@+id/fav_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:text="
"
            android:textColor="#000"
            android:textSize="17dp" />
    </LinearLayout>

</ScrollView>